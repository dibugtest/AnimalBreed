                            @Html.DisplayFor(modelItem => item.previousInseminationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.semenDoseWasted)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.amounReceived)
                        </td>



                        <td>
                            @Html.ActionLink("Edit", "AddEditAnimal", new { id = item.id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Delete", "DeleteAnimal", new { id = item.id }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
